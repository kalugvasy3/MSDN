        xmlns:MyUserControl="clr-namespace:MyUserControl;assembly=MyUserControl" x:Class="AllPictureImageViewer.MainWindow"
        mc:Ignorable="d"
        Title="Any Image Picture Viewer" MinHeight="266" MinWidth="256" SizeToContent="WidthAndHeight" Icon="AP.ico" ShowInTaskbar="False" >
    
    <Grid x:Name="gridAll" Margin="0,0,0,0"  RenderTransformOrigin="0.5,0.5" >

        <MyUserControl:ShowImage x:Name="ShowImage" Margin="0,0,0,0" AllowDrop="True" />

    </Grid>
